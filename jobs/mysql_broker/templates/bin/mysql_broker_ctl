#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
export JOB_NAME='mysql_broker'
source /var/vcap/jobs/mysql_broker/helpers/ctl_setup.sh $JOB_NAME

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    export JOB_DIR=/var/vcap/jobs/$JOB_NAME
    export PKG_DIR=/var/vcap/packages/$JOB_NAME
    
    cd $JOB_DIR
    exec java -jar $PKG_DIR/build/libs/cf-mysql-java-broker-0.1.0.jar \
         --spring.config.name=$JOB_NAME \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log &

    # store pid in $PIDFILE
    echo $! > $PIDFILE
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: mysql_broker_ctl {start|stop}"

    ;;

esac
exit 0
